<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
    <title>Smart-TODO-List - Home Page</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="./styles/main.css" type="text/css"/>
    <!-- App CSS -->

    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <!-- App JS -->
  </head>

  <body>
    <!-- Top nav bar (fixed) -->
    <nav>
      <div class="header">
        <span>APP NAME</span>
      </div>
    </nav>

   <div>
    <form id="form1" action="/tasks" method="POST">
      <input type="text" name="text" id="task-text"></input>
      <button type="submit">+</button>
    </form>
   </div>

    <!-- Page-specific (main) content here -->
    <main class="container" >
      <section class="movies-container" id="accordion">
        <div class="movies-header">Movies</div>
        <div class="movieTasks"></div>
      </section>

      <section class="restaurants-container" id="accordion">
        <div class="categoryHeader">Restaurants</div>
        <div class="restaurantTasks"></div>
      </section>

      <section class="books-container" id="accordion">
        <div class="categoryHeader">Books</div>
        <div class="bookTasks"></div>
      </section>

      <section class="products-container" id="accordion">
        <div class="categoryHeader">Products</div>
        <div class="productTasks"></div>
      </section>
    </main>
  </body>
  <script src="./scripts/app.js"></script>
  <%- include('partials/_footer') %>
